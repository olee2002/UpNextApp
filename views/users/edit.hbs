<div class="food">  

<div class="stepper">
    <a href="/users">UpNext Home</a> |
    <a href="/users/{{user._id}}">Profile</a> | Edit Profile
</div>

<div class="card">

    <h2>Edit User Profile</h2>
    <div>
        <form action="/users/{{user._id}}?_method=PUT" method="POST">
            <div class="form-input">
                <label for="nickName">Nickname:</label>
                <input type="text" name="nickName" value="{{user.nickName}}" required/>
            </div>

            <div class="form-input">
                <label for="email">Email:</label>
                <input type="text" name="email" value="{{user.email}}" />
            </div>

            <div class="form-input">
                <label for="firstName">First Name:</label>
                <input type="text" name="firstName" value="{{user.firstName}}" required/>
            </div>

            <div class="form-input">
                <label for="lastName">Last Name:</label>
                <input type="text" name="lastName" value="{{user.lastName}}" required/>
            </div>

            <div class="form-input">
                <label for="photoUrl">Photo Url:</label>
                <input type="text" name="photoUrl" value="{{user.photoUrl}}" />
            </div>

            <div class="button-container flex-end">
                <input class="button primary" type="submit" value="Update Profile">
                <br>
                <a href="/users/{{user._id}}" class="button primary">Cancel</a>
            </div>
        </form>
    </div>
</div>
</div>